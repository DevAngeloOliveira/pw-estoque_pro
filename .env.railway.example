# CONFIGURAÇÃO PARA RAILWAY
# Copie estas variáveis para o painel do Railway

APP_NAME=EstoquePro
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://seu-projeto.up.railway.app

LOG_CHANNEL=errorlog
LOG_LEVEL=error

# BANCO DE DADOS - Configure no Railway manualmente
# Vá no serviço MySQL e copie os valores:
# DB_CONNECTION=mysql
# DB_HOST=<MYSQLHOST do Railway>
# DB_PORT=<MYSQLPORT do Railway>
# DB_DATABASE=<MYSQLDATABASE do Railway>
# DB_USERNAME=<MYSQLUSER do Railway>
# DB_PASSWORD=<MYSQLPASSWORD do Railway>
#
# Exemplo:
# DB_CONNECTION=mysql
# DB_HOST=containers-us-west-123.railway.app
# DB_PORT=6379
# DB_DATABASE=railway
# DB_USERNAME=root
# DB_PASSWORD=sua_senha_aqui

BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DRIVER=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Para usar Redis no Railway, adicione o plugin Redis
# CACHE_DRIVER=redis
# SESSION_DRIVER=redis
# REDIS_HOST=${REDISHOST}
# REDIS_PASSWORD=${REDISPASSWORD}
# REDIS_PORT=${REDISPORT}

MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=noreply@estoquepro.com
MAIL_FROM_NAME="${APP_NAME}"
